@{
    /**/

    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Home", "Index", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <input type="submit" class="btn btn-default" formaction="WithHttp" value="With Task Service Http" />
        </div>
        <div class="col-md-4">
            <input type="submit" class="btn btn-default" formaction="WithTCP" value="With Task Service TCP" />
        </div>
    </div>
    /**/
    <div class="row">
        <div class="col-md-12">
            @ViewBag.Result
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <input type="submit" class="btn btn-default" formaction="GetJobs" value="Get Jobs List" />
        </div>
        <div class="col-md-4">
            <input type="submit" class="btn btn-default" formaction="GetJobsByRole?role=Developer" value="Get Jobs By Developer Role" />
        </div>
        <div class="col-md-4">
            <input type="submit" class="btn btn-default" formaction="GetJobsByRole?role=Manager" value="Get Jobs By Manager Role" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.Jobs != null)
            {
                foreach (var job in ViewBag.Jobs)
                {
                    <li>@job</li>
                }
            }
        </div>
    </div>
}